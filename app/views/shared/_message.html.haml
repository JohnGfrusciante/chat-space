.mainChat__contents__userName
  = message.user.name
  .mainChat__contents__userName__timeStamp
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.mainChat__contents__message
  - if message.content.present?
    %p
      = message.content
  = image_tag message.image.url, class: '' if message.image.present?